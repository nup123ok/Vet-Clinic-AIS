<Application x:Class="Vet_Clinic_AIS.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Vet_Clinic_AIS"
             StartupUri="RegLog.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="Color.Background.Main" Color="Cornsilk"></SolidColorBrush>

        <SolidColorBrush x:Key="Color.Background.Focus" Color="#01bbae"></SolidColorBrush>

        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}">

            <Setter Property="Background" Value="{StaticResource Color.Background.Main}"></Setter>
            <Setter Property="Width" Value="800"></Setter>
            <Setter Property="Height" Value="600"></Setter>
            <Setter Property="MinWidth" Value="800"></Setter>
            <Setter Property="MinHeight" Value="600"></Setter>
        </Style>
        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="{StaticResource Color.Background.Focus}"></Setter>
        </Style>
    </Application.Resources>
</Application>
