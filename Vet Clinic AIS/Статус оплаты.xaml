<Window x:Class="Vet_Clinic_AIS.Статус_оплаты"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vet_Clinic_AIS"
        mc:Ignorable="d"
        Title="Ввод суммы взноса" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Введите сумму взноса:" Margin="10" Grid.Row="0"/>
        <TextBox Name="paymentAmountTextBox" Margin="10" Grid.Row="1" />

        <Button Content="Оплатить" Name="payButton" Grid.Row="2" Width="100" Height="30" Margin="10" Click="PayButton_Click"/>
    </Grid>
</Window>
